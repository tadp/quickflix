%section.user.container
  .row
    .span10.offset1
      %article
        %header
          %img(src="http://www.gravatar.com/avatar/#{Digest::MD5.hexdigest(@user.email || 'none')}?s=40")
          %h2 #{User.where(user_id=params[:id]).first.full_name}'s video collections (#{User.where(user_id=params[:id]).first.queue_items.count})
          %button.btn Follow
        %table.table
          %thead
            %tr
              %th(width="30%") Video Title
              %th(width="15%") Genre
          %tbody
          - @queue_items.each do |queue_item|
            %tr
              = hidden_field_tag "queue_items[][id]", queue_item.id
              %td
                = link_to queue_item.video_title, queue_item.video
              %td
                = link_to queue_item.category_name, queue_item.video.categories.first


%section.user_reviews.container
  .row
    .span10.offset1
      %header
        %h3 #{User.where(user_id=params[:id]).first.full_name}'s Reviews (#{User.where(user_id=params[:id]).first.reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .span2
                %p
                  = link_to review.video.title
                %span Rating: #{review.rating} / 5
              .span8
                %p=review.video.description
