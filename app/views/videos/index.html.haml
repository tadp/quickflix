%article.video_category
  %header
    %h3= link_to "All Videos"
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating

-if @video_results.blank?
  -@categories.each do |category|
    .videos.row
    %h2= link_to "#{category.name}", category_path(category)
    -category.recent_videos.each do |video| 
      .video.span2
        =link_to image_tag("#{video.small_cover}"), video_path(video)

-else
  -@video_results.each do |video|
    .video.span2
      =link_to image_tag("/tmp/#{video.filename}.jpg"), video_path(video)
